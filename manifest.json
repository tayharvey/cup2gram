{
"manifest_version": 2,
"name": "Cup2Gram",
"description": "Quick conversions for baking American recipes in grams.",
"version": "0.1.8",
"icons": {"128": "images/icon_128.png"},
"content_scripts": [
    {
        "matches": [
            "*://*/*"
        ],
        "js": [
            "numeric-quantity/index.js",
            "content.js"
        ],
        "run_at": "document_end"
    }],
"browser_action": {
  "default_icon": "images/icon_128.png",
  "default_popup": "popup.html"
},
"permissions": ["activeTab"]
}
